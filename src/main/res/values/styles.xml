<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowBackground">@drawable/whitebackground</item>
    </style>

    <style name="AppTheme2" parent="@android:style/Theme.Holo.NoActionBar">
        <item name="android:windowBackground">@drawable/whitebackground</item>
    </style>


    <style name="AppDialog" parent="android:Theme.Holo.Light.Dialog">
    </style>

    <style name="MyActionBar" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="android:background">@drawable/colorful</item>
        <item name="colorAccent">#FF4081</item>
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorControlHighlight">#00CC55</item>
        <item name="colorControlNormal">#FF0000</item>
    </style>

    <style name="button_text">
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >fill_parent</item>
        <item name="android:textColor" >#ffffff</item>
        <item name="android:gravity" >center</item>
        <item name="android:layout_margin" >3dp</item>
        <item name="android:textSize" >15dp</item>
        <item name="android:typeface">sans</item>
        <item name="android:shadowColor" >#f6f6f6</item>
        <item name="android:shadowDx" >1</item>
        <item name="android:shadowDy" >1</item>
        <item name="android:shadowRadius" >1</item>
    </style>

</resources>